
<h2 style="padding-top: 5px;">User info</h2>
<th><%= attachment_image_tag user, :profile_image, fallback: "V8ato458A6787_TP_V.jpg", :size => '150x200' %></th>
    <table class="table">
        <tbody>
            <tr>
                <th>
                    name
                </th>
                <th>
                    <%= user.name %>
                </th>
                <tr>
                <th>
                    introduction
                </th>
                <th>
                    <%= user.introduction %>
                </th>
                </tr>
            </tr>
        </tbody>
    </table>
    <div class="row">
        <%= link_to "", edit_user_path(user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
    </div>
    <h2 class="mt-3">New book</h2>
    <%= form_for @book do |f| %>
        <%= f.hidden_field :user_id, :value => current_user.id%>
        <label>Title</label>
        <%= f.text_field :title, :size => '30x4' %>
        <label>Opinion</label>
        <%= f.text_area :body , :size => '29x4' %>
        <%= f.submit "Create Book", class: "btn btn-success" %>
    <% end %>
</div>
