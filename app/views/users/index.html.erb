<main>
    <div class="container">
        <div class="row">
            <div class="col-md-3 col-xs-3">
                <%= render 'users/user_post', user: @user %>
                <div class="col-md-8 col-xs-9 offset-md-1">
                <h2>Books</h2>
                <table class="table table-hover table-inverse">
                    <thead>
                        <tr>
                            <th>image</th>
                            <th>name</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @user_all.each do |user| %>
                        <tr>
                            <th><%= attachment_image_tag user, :profile_image, fallback: "V8ato458A6787_TP_V.jpg", :size => '50x50' %></th>
                            <th><%= user.name %></th>
                            <th><%= link_to "Show", user_path(user) %></th>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
                </div>
            </div>
            
        </div>
    </div>
</main>